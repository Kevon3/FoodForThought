@page
@model FoodForThoughtWeb.Pages.Account.RegisterModel
@{
}
<form method = "post">

	<div class="row m-2">
		<div class="row m-2 text-danger" asp-validation-summary="All"></div>
		<div class="col-2">
			<label asp-for="NewPerson.Username" class="form-label">Username</label>
		</div>
		<div class="col-10">
			<input type="text" class="form-control" asp-for ="NewPerson.Username"/>
			<span class = "text-danger" asp-validation-for= "NewPerson.Username"></span>
		</div>
	</div>
	<div class = "row m-2">
		<div class="col-2">
			<label asp-for = "NewPerson.FirstName" class="form-label">First Name</label>
			
		</div>
		<div class="col-10">
			<input type = "text" class="form-control" asp-for =" NewPerson.FirstName"/>
			<span class=" text-danger" asp-validation-for="NewPerson.FirstName"></span>
		</div>
	</div>
	<div class="row m-2">
		<div class="col-2">
			<label asp-for ="NewPerson.LastName" class="form-label">Last Name</label>
		</div>
		<div class="col-10">
			<input type="text" class="form-control" asp-for ="NewPerson.LastName"/>
			<span class=" text-danger" asp-validation-for="NewPerson.LastName"></span>
		</div>
	</div>
	<div class="row m-2">
		<div class="col-2">
			<label asp-for="NewPerson.Email" class="form-label">Email</label>
		</div>
		<div class="col-10">
			<input type="text" class="form-control" asp-for =" NewPerson.Email" />
			<span class=" text-danger" asp-validation-for="NewPerson.Email"></span>
		</div>
	</div>
	<div class="row m-2">
		<div class="col-2">
			<label asp-for="NewPerson.Password" class="form-label">Password</label>
		</div>
		<div class="col-10">
			<input type="text" class="form-control" asp-for =" NewPerson.Password" />
			<span class=" text-danger" asp-validation-for="NewPerson.Password"></span>
		</div>
	</div>
	<div class="row m-2">
		<div class="col-2">
			<button style ="background-color: rosybrown; border: none;" id="btnLogin" class="btn btn-primary">Register</button>
		</div>

</form>
