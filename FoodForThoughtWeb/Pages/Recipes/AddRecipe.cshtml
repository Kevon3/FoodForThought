@page
@model FoodForThoughtWeb.Pages.Recipes.AddRecipeModel
@{
    
    
	Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthenticated" : "_Layout";
}

<style>
    .custom-btn {
        background-color: rosybrown;
        color: white;
        border: none;
    }

    .form-container {
        width: 570px;
        margin: 0 auto; /* Center the form horizontally */
        padding: 20px;
        background-color: #f8f9fa; /* Light gray background */
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-title {
        text-align: center;
        color: rosybrown;
        margin-bottom: 20px;
    }

    /* Style for form labels */
    .form-label {
        font-weight: bold;
        margin-bottom: 5px;
        margin-right: 0px;
        color: rosybrown; /* Label text color */
    }

    /* Style for form inputs */
    .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da; /* Gray border */
        padding: 8px;
        width: 100%;
        box-sizing: border-box;
        margin-left: 10px;
    }
</style>

<form method="post" class="form-group form-container">
    <h1 class="form-title">Add a Recipe :)</h1>
    <div class="row m-2">
        <div class="col-2">
            <label class="form-label" asp-for="newRecipeItem.DishName"></label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="newRecipeItem.DishName" />
        </div>
    </div>
    <div class="row m-2">
        <div class="col-2">
            <label class="form-label" asp-for="newRecipeItem.Rating"></label>
        </div>
        <div class="col-10">
            <input type="number" class="form-control" asp-for="newRecipeItem.Rating" />
        </div>
    </div>
    <div class="row m-2">
        <div class="col-2">
            <label class="form-label" asp-for="newRecipeItem.Ingredients"></label>
        </div>
        <div class="col-10">
            <textarea rows="5" class="form-control" asp-for="newRecipeItem.Ingredients"></textarea>
        </div>
    </div>
    <div class="row m-2">
        <div class="col-2">
            <label class="form-label" asp-for="newRecipeItem.Steps"></label>
        </div>
        <div class="col-10">
            <textarea rows="5" class="form-control" asp-for="newRecipeItem.Steps"></textarea>
        </div>
    </div>
    <div class="row m-2">
        <div class="col-2">
            <label class="form-label" asp-for="newRecipeItem.CuisineId"></label>
        </div>
        <div class="col-10">
            <select class="form-control" asp-for="newRecipeItem.CuisineId" asp-items="@Model.Cuisine"></select>
        </div>
    </div>
    <div class="row m-2">
        <div class="col-2">
            <label class="form-label" asp-for="newRecipeItem.url">Image URL:</label>
        </div>
        <div class="col-6">
            <input type="text" class="form-control" asp-for="newRecipeItem.url" id="imageUrlInput" />
            <span asp-validation-for="newRecipeItem.url"></span>
        </div>
        <div class="col-4">
            <img id="recipeImage" src="" alt="Recipe Image" style="max-width: 100px; max-height: 100px; width: 100%; height: auto;" />
        </div>
    </div>
    <div class="row m-2">
        <div class="col-12">
            <button id="btnAdd" class="btn custom-btn btn-block">Add Recipe!</button>
        </div>
    </div>
</form>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Get references to the URL input field and the image element
        const imageUrlInput = document.getElementById('imageUrlInput');
        const recipeImage = document.getElementById('recipeImage');

        // Add event listener to listen for changes in the URL input field
        imageUrlInput.addEventListener('input', function () {
            // Get the value of the URL input field
            const imageUrl = imageUrlInput.value.trim();

            // Update the src attribute of the image element with the URL value
            if (imageUrl) {
                recipeImage.src = imageUrl;
                recipeImage.style.display = 'block'; // Show the image
            } else {
                recipeImage.src = ''; // Clear the image source
                recipeImage.style.display = 'none'; // Hide the image
            }
        });
    });
</script>

