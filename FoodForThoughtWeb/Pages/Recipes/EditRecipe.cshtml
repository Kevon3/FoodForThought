@page
@model FoodForThoughtWeb.Pages.Recipes.EditRecipeModel
@{
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthenticated" : "_Layout";
}

<style>
    /*format buttons*/
    .custom-btn {
        background-color: rosybrown;
        color: white;
        border: none;
    }

    /*format recipe containers*/
    .form-container {
        width: 570px;
        margin: 0 auto; 
        padding: 20px;
        background-color: #f8f9fa; 
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /*title formatting*/
    .form-title {
        text-align: center;
    }

    /*label formatting*/
    .form-label {
        font-weight: bold;
        margin-bottom: 0px;
        margin-right: 0px; 
        color: rosybrown;
    }

    /*format text elements throughout*/
    .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da; 
        padding: 8px;
        width: 95%;
        box-sizing: border-box;
        margin-left: 10px;
    }
</style>

<form method="post" class="form-group form-container">
    <h3 class="form-title">Edit Recipe</h3>
    <div class="row m-2">
        <div class="col-2">
            <label class="form-label" asp-for="Item.DishName"></label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="Item.DishName" />
        </div>
    </div>
    <div class="row m-2">
        <div class="col-2">
            <label class="form-label" asp-for="Item.Rating"></label>
        </div>
        <div class="col-10">
            <input type="number" class="form-control" asp-for="Item.Rating" />
        </div>
    </div>
    <div class="row m-2">
        <div class="col-2">
            <label class="form-label" asp-for="Item.Ingredients"></label>
        </div>
        <div class="col-10">
            <textarea rows="5" class="form-control" asp-for="Item.Ingredients"></textarea>
        </div>
    </div>
    <div class="row m-2">
        <div class="col-2">
            <label class="form-label" asp-for="Item.Steps"></label>
        </div>
        <div class="col-10">
            <textarea rows="5" class="form-control" asp-for="Item.Steps"></textarea>
        </div>
    </div>
    <div class="row m-2">
        <div class="col-2">
            <label class="form-label" asp-for="Item.CuisineId"></label>
        </div>
        <div class="col-10">
            <select class="form-control" asp-for="Item.CuisineId" asp-items="@Model.Cuisine"></select>
        </div>
    </div>
    <div class="row m-2">
        <div class="col-2">
            <label class="form-label" asp-for="Item.url">Image URL:</label>
        </div>
        <div class="col-6">
            <input type="text" class="form-control" asp-for="Item.url" id="imageUrlInput" />
            <span asp-validation-for="Item.url"></span>
        </div>
        <div class="col-4">
            <img id="recipeImage" src="" alt="Recipe Image" style="max-width: 100px; max-height: 100px; width: 100%; height: auto;" />
        </div>
    </div>
    <div class="row m-2">
        <div class="col-12">
            <button id="btnAdd" class="btn custom-btn btn-block">Update!</button>
        </div>
    </div>
</form>

<script>
    //for the url to work
    document.addEventListener('DOMContentLoaded', function () {
        const imageUrlInput = document.getElementById('imageUrlInput');
        const recipeImage = document.getElementById('recipeImage');

        imageUrlInput.addEventListener('input', function () {
            
            const imageUrl = imageUrlInput.value.trim();

            
            if (imageUrl) {
                recipeImage.src = imageUrl;
                recipeImage.style.display = 'block'; 
            } else {
                recipeImage.src = ''; 
                recipeImage.style.display = 'none'; 
            }
        });
    });
</script>
